<% unless current_user.team.present? %>
  <div class="create-team text-center">
    <%= form_with(model: @team, local: true) do |form| %>
      <div class="field">
        <%= form.label :name, "Nome do Time" %>
        <%= form.text_field :name %>
      </div>

      <div class="actions">
        <%= form.submit "Criar Time" %>
      </div>
    <% end %>
  </div>
<% end %>

<% if current_user.team.present? %>
  <div class="created-teams">
    <h2 class="text-center">Seu time</h2>
    <div class="text-center">
      <%= "#{current_user.team.name} - #{number_to_currency(current_user.team.cash)}" %>
    </div>
  </div>
<% end %>

<%= image_tag 'create_team.jpeg', class: 'new-team' %>
