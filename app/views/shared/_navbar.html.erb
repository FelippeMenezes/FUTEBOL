<div class="navbar navbar-expand-sm navbar-light navbar-futebol">
  <div class="container-fluid">
    <!-- Este link não precisa, pois geralmente leva para a home -->
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "1.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <!-- Adicione data-turbo="false" aqui -->
            <%= link_to "Home", root_path, class: "nav-link", data: { turbo: false } %>
          </li>
          <li class="nav-item">
            <!-- Adicione data-turbo="false" aqui -->
            <%= link_to "Messages", "#", class: "nav-link", data: { turbo: false } %>
          </li>
          <li class="nav-item dropdown">
            <!-- O link do dropdown já usa data-bs-toggle, então o Turbo geralmente não interfere, mas não custa garantir -->
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-turbo="false">
              <%= image_tag "ball.png", class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item", data: { turbo: false } %>
              <%= link_to "Another action", "#", class: "dropdown-item", data: { turbo: false } %>
              <!-- O link de logout já usa turbo_method, então ele tem um comportamento especial. Deixe como está. -->
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <!-- Adicione data-turbo="false" aqui -->
            <%= link_to "Login", new_user_session_path, class: "nav-link", data: { turbo: false } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
